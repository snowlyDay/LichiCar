<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/app_title_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btn_settings"
            android:layout_width="48dip"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="24dp"
            android:background="@android:color/transparent"
            android:src="@drawable/action_settings" />

        <Button
            android:id="@+id/btn_chepai"
            android:layout_width="80dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="24dp"
            android:background="@drawable/abc_list_selector_disabled_holo_dark"
            android:text="鲁B12345" />
    </RelativeLayout>

    <TableLayout
        android:id="@+id/tab01"
        android:layout_width="fill_parent"
        android:layout_height="105dp" >

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:src="@drawable/abc_ab_solid_dark_holo" />
    </TableLayout>

    <TableLayout
        android:id="@+id/tab02"
        android:layout_width="fill_parent"
        android:layout_height="105dp"
        android:orientation="horizontal" >

        <TableRow>

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:src="@drawable/abc_ab_solid_dark_holo" />

            <RelativeLayout>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center_vertical"
                    android:text="剩余里程:" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView1"
                    android:text="故障:" />
            </RelativeLayout>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/tab03"
        android:layout_width="fill_parent"
        android:layout_height="106dp"
        android:orientation="vertical" >

        <TableRow>

            <ImageButton
                android:id="@+id/guanli"
                android:layout_width="106dp"
                android:layout_height="106dp"
                android:src="@drawable/abc_ab_solid_dark_holo" />

            <ImageButton
                android:id="@+id/kongzhi"
                android:layout_width="106dp"
                android:layout_height="106dp"
                android:src="@drawable/abc_ab_solid_dark_holo" />

            <ImageButton
                android:id="@+id/shouhou"
                android:layout_width="106dp"
                android:layout_height="106dp"
                android:src="@drawable/abc_ab_solid_dark_holo" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/tab04"
        android:layout_width="fill_parent"
        android:layout_height="106dp"
        android:orientation="vertical" >

        <TableRow>

            <ImageButton
                android:id="@+id/baoyang"
                android:layout_width="106dp"
                android:layout_height="106dp"
                android:src="@drawable/abc_ab_solid_dark_holo" />

            <ImageButton
                android:id="@+id/xinxi"
                android:layout_width="106dp"
                android:layout_height="106dp"
                android:src="@drawable/abc_ab_solid_dark_holo" />

            <ImageButton
                android:id="@+id/baojing"
                android:layout_width="106dp"
                android:layout_height="106dp"
                android:src="@drawable/abc_ab_solid_dark_holo" />
        </TableRow>
    </TableLayout>

</LinearLayout>